<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="antonchuvashov.familybudget.CategoryEditorController" spacing="10" alignment="CENTER" style="-fx-padding: 10;">
    <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TableView fx:id="generalCategoryTableView">
        <columns>
            <TableColumn fx:id="nameColumn" text="Название" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Добавить" onAction="#handleAdd" />
        <Button fx:id="editHandler" text="Изменить" onAction="#handleEdit" />
        <Button fx:id="deleteHandler" text="Удалить" onAction="#handleDelete" />
    </HBox>
</VBox>
